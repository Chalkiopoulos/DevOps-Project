
CREATE DATABASE IF NOT EXISTS devopsdb;
USE devopsdb;

CREATE TABLE IF NOT EXISTS weak_passwords (
    id INT AUTO_INCREMENT PRIMARY KEY,
    plaintext VARCHAR(255) NOT NULL,
    md5_hash CHAR(32),
    sha256_hash CHAR(64),
    bcrypt_hash CHAR(60),
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

SELECT * FROM weak_passwords;